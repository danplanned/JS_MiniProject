# .github/workflows/deploy-random-password-generator.yml
name: Deploy Random Password Generator

on:
  push:
    branches:
      - main  # Trigger this action when changes are pushed to the main branch

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout the repository
        uses: actions/checkout@v2

      - name: Deploy Random Password Generator
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./Random Password Generator  # Path to the folder
          destination_dir: random-password-generator  # This will be the URL subdirectory
